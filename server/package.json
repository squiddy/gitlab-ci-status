{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc",
    "test": "jest",
    "check-code:prettier": "prettier -l '{src,__tests__}/**/*.js'",
    "check-code": "yarn check-code:prettier"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.ts$"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "express": "^4.17.0",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/compression": "^0.0.36",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/morgan": "^1.7.35",
    "nodemon": "^1.18.9",
    "pkg": "^4.4.0",
    "prettier": "^1.17.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.1"
  }
}
